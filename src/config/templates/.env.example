# DNC VINNY Configuration
# Copy this file to .env and fill in your values

# Global Settings
DNC_VINNY_VERSION=1.0.0
DNC_VINNY_ENVIRONMENT=development
DNC_VINNY_LOG_LEVEL=info

# Security Settings
DNC_VINNY_ENCRYPTION_ALGORITHM=aes-256-gcm
DNC_VINNY_KEY_DERIVATION=pbkdf2
DNC_VINNY_SALT_LENGTH=32
DNC_VINNY_KEY_ITERATIONS=100000

# Master Password for Encryption (keep this secure!)
# DNC_VINNY_MASTER_PASSWORD=your-secure-master-password

# Feature Flags
DNC_VINNY_FEATURE_AUTO_SYNC=true
DNC_VINNY_FEATURE_WEBHOOKS=true
DNC_VINNY_FEATURE_REPORTING=true
DNC_VINNY_FEATURE_SCHEDULING=true

# Dealership Configuration
# List all dealership IDs (comma-separated)
DNC_VINNY_DEALERSHIP_IDS=dealership1,dealership2

# Dealership 1 Configuration
DNC_VINNY_DEALERSHIP1_NAME=Sample Dealership 1
DNC_VINNY_DEALERSHIP1_ACTIVE=true

# VinSolutions Settings for Dealership 1
DNC_VINNY_DEALERSHIP1_VIN_BASE_URL=https://api.vinsolutions.com
DNC_VINNY_DEALERSHIP1_VIN_API_KEY=your-api-key
DNC_VINNY_DEALERSHIP1_VIN_API_SECRET=your-api-secret
DNC_VINNY_DEALERSHIP1_VIN_DEALERSHIP_ID=12345
DNC_VINNY_DEALERSHIP1_VIN_TIMEOUT=30000
DNC_VINNY_DEALERSHIP1_VIN_RETRY_ATTEMPTS=3

# PossibleNOW Settings for Dealership 1
DNC_VINNY_DEALERSHIP1_PN_BASE_URL=https://api.possiblenow.com
DNC_VINNY_DEALERSHIP1_PN_USERNAME=your-username
DNC_VINNY_DEALERSHIP1_PN_PASSWORD=your-password
DNC_VINNY_DEALERSHIP1_PN_ACCOUNT_ID=your-account-id
DNC_VINNY_DEALERSHIP1_PN_API_VERSION=v1
DNC_VINNY_DEALERSHIP1_PN_TIMEOUT=30000
DNC_VINNY_DEALERSHIP1_PN_RETRY_ATTEMPTS=3

# Workflow Settings for Dealership 1
DNC_VINNY_DEALERSHIP1_BATCH_SIZE=100
DNC_VINNY_DEALERSHIP1_MAX_CONCURRENT=5
DNC_VINNY_DEALERSHIP1_PROCESSING_DELAY=1000
DNC_VINNY_DEALERSHIP1_ERROR_THRESHOLD=10
DNC_VINNY_DEALERSHIP1_MAX_RETRIES=3
DNC_VINNY_DEALERSHIP1_BACKOFF_MULTIPLIER=2
DNC_VINNY_DEALERSHIP1_MAX_BACKOFF_MS=60000

